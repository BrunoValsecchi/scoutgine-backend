{
  "version": 2,
  "builds": [
    {
      "src": "scoutgine/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9" 
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "scoutgine/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "scoutgine/wsgi.py"
    }
  ]
}